{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tous ensemble avec Lenny!</h1>
    <label for="campus-select">
        Filtrer les sorties
    </label>
    <select id = campus-select>
        {% for campus in campuses %}
            <option>{{ campus.name }}</option>
        {%  endfor %}
    </select>
    <ul>
        {% for event in events %}
            <li>{{ event.name }} in {{ event.place.name }}, {{ event.place.city.name }}</li>
        {%  endfor %}
    </ul>
</div>
{% endblock %}
