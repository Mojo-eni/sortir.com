                        <label for="place"
                               class="absolute left-0 -top-4 text-gray-500 text-m"
                        >Lieu</label>
                        <select id="place" name="{{ field_name(eventForm.place) }}" onchange="clicPlaceSelect(this)"
                                class="peer h-12 w-64 border-b-2 border-gray-300 bg-transparent placeholder-transparent
                               focus:outline-none focus:border-light-blue">
                            {% for name, id in field_choices(eventForm.place) %}
                                <option value="{{ id }}">{{ name }}</option>
                            {% endfor %}
                        </select>
                        {% for error in field_errors(eventForm.place) %}
                            <div class="text-ms accent-red-700">{{ error }}</div>
                        {% endfor %}
                        </div>
                        <div>
                            <button
                                    class="select-none rounded-lg bg-gray-900 py-3 px-6 text-center font-sans text-xs font-bold uppercase text-white shadow-md shadow-gray-900/10 transition-all hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none"
