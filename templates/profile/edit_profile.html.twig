{# templates/profile/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
            <h1 class="text-3xl font-bold mb-6 text-center">Modifier Mon Profil</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            <div class="grid grid-cols-1 gap-6">
                {{ form_row(form.pseudo, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
                {{ form_row(form.first_name, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
                {{ form_row(form.last_name, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
                {{ form_row(form.email, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
                {{ form_row(form.phone, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
                {{ form_row(form.actif, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}

                {{ form_row(form.campus, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
                {{ form_row(form.photoFile, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
                {{ form_row(form.plainPassword, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}


            </div>

            <div class="mt-6 flex justify-center space-x-4">
                <button class="bg-custom-blue text-white px-6 py-2 rounded-lg shadow-md font-bold hover:bg-blue-700">
                    Enregistrer
                </button>
                <a href="{{ path('app_profile') }}" class="bg-gray-400 text-white px-6 py-2 rounded-lg shadow-md font-bold hover:bg-gray-600">
                    Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
