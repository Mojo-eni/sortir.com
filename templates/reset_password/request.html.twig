{# templates/reset_password/request.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="flex flex-col min-h-screen mx-auto mt-3 items-center">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="bg-red-500 text-white px-4 py-2 rounded-md mb-4">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="font-bold text-3xl text-blue-950 mb-6">Réinitialiser votre mot de passe</h1>

        <div class="bg-white shadow-lg rounded-lg px-8 py-6 w-full max-w-md">
            <form action="{{ path('app_reset_password') }}" method="post">
                <div class="mb-4">
                    <label for="email" class="block text-lg font-semibold text-gray-800 mb-2">Adresse e-mail</label>
                    <input type="email" id="email" name="email" class="block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50" required>
                </div>

                <div class="mb-4 text-gray-600 text-sm">
                    <small>
                        Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <div class="flex justify-center">
                    <button type="submit" class="group hover:underline bg-custom-blue h-12 w-72 border text-center p-3 text-gray-50 text-base font-bold rounded-lg">
                        Envoyer le lien de réinitialisation
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
